# NyayGuru AI Pro - Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/nyayguru
DATABASE_ECHO=False

# Vector Database
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# OpenAI Configuration (or use alternative LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Alternative: Use local LLM
USE_LOCAL_LLM=False
LOCAL_LLM_ENDPOINT=http://localhost:11434/api

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/0
USE_CACHE=False

# Document Processing
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,doc,docx

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here

# SMTP Email Configuration (for booking confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@nyayashastra.com
SMTP_FROM_NAME=NyayaShastra Legal Services
